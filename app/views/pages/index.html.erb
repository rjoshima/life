<p id="notice"><%= notice %></p>

<h1>Pages</h1>

<table>
  <thead>
    <tr>
      <th>Url</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <%= form_tag pages_path, :method => :get do %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag 'Search', :name => nil %>
    <% end %>

    <% @pages.each do |page| %>
      <tr>
        <td><%= page.url %></td>
        <td><%= page.title %></td>
        <td><%= page.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Page', new_page_path %>
